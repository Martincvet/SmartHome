@page
@model SmartHome.Memberships.DeleteModel

@{
    ViewData["Title"] = "Delete Membership";
}

<h1>@ViewData["Title"]:</h1>

<h3>Are you sure you want to delete this Membership: @Model.Membership.Id?</h3>
<div>
    <h4>Membership</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Membership.MemberhipTypeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Membership.MemberhipTypeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Membership.Discount_Product)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Membership.Discount_Product)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Membership.Discount_Service)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Membership.Discount_Service)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Membership.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-page="./List">Back to List</a>
    </form>
</div>
