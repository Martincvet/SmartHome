@page
@model SmartHome.Memberships.EditModel

@{
    ViewData["Title"] = "Edit Membership";
}

    <h1>@ViewData["Title"]:</h1>

<h4>Membership: @Model.Membership.Id</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Membership.Id" />
            <div class="form-group">
                <label asp-for="Membership.MemberhipTypeName" class="control-label"></label>
                <input asp-for="Membership.MemberhipTypeName" class="form-control" />
                <span asp-validation-for="Membership.MemberhipTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Membership.Discount_Product" class="control-label"></label>
                <input asp-for="Membership.Discount_Product" class="form-control" />
                <span asp-validation-for="Membership.Discount_Product" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Membership.Discount_Service" class="control-label"></label>
                <input asp-for="Membership.Discount_Service" class="form-control" />
                <span asp-validation-for="Membership.Discount_Service" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
