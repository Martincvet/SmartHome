        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.App_User.FirstName)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.App_User.FirstName)
        </div>
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.App_User.LastName)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.App_User.LastName)
