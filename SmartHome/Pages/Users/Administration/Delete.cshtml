        </div>
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.App_User.Email)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.App_User.Email)
        </div>
        <div class="col-sm-2">
