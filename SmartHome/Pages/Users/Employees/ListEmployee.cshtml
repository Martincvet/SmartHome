@page
@model SmartHome.Pages.Users.Employees.ListEmployeeModel
@{
    ViewData["Title"] = "ListEmployees";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    var number = 1;
}

<h1>List of Employees:</h1>
<hr />

<div class="row">
    <div class="card-deck">
        @if (Model.Employees.Any())
        {
            @foreach (var employee in Model.Employees)
            {
                var photopath = "~/images/" + (employee.PhotoPath ?? "no-image.png");
                <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
                    <div class="card-header">
                        <a asp-page="/ShopItems/Details"><img class="card-img-top imageThumbnail" src="@photopath" asp-append-version="true" /></a>
                    </div>

                    <div class="card-body text-center">
                        <a asp-page="/Employee/Edit">@employee.FirstName @employee.LastName</a>
                        <div class="panel-heading">
                            <p>@employee.Role</p>
                        </div>
                    </div>

                    <div class="card-footer text-center">
                        <small class="text-muted">@number</small>
                    </div>
                </div>
                <br /> <input type="hidden" @number++ />
            }
        }
        else
        {
            <div class="card-footer alert-primary text-center">
                <p> Nothing to Display! </p>
            </div>
        }

    </div>
</div>

<div class="row">
    <div class="col">
        <a class="btn btn-outline-secondary" asp-page="./Edit">Add New Employee</a>
        <a class="btn btn-outline-secondary" asp-page="/Index">Back</a>
    </div>
</div>